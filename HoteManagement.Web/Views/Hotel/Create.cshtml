@using HoteManagement.Web.Core;

@model HoteManagement.Web.Models.Api.HotelRequest
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">创建酒店</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
   @using (Html.BeginForm("Create", "hotel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
   {
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">酒店名称</label>
                <div class="col-sm-10">
                    @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                    @Html.TextBoxFor(s => s.HotelName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(s => s.IsChain) 连锁酒店
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">父酒店</label>
                <div class="col-sm-10">
                    @*<select class="form-control">
                        @if (ViewBag.Hotellist != null)
                        {
                            <option value="0">请选择</option>
                            foreach (var item in ViewBag.Hotellist as List<HoteManagement.Service.Model.HotelDto>)
                            {
                                <option value="@item.Id">@item.HotelName</option>
                            }
                        }
                      
                    </select>*@

                    @Html.DropDownListFor(s => s.ParentId, ViewBag.Hotellist as List<SelectListItem>,new {@class= "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">过期时间</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(s => s.Expiretime, new { @class = "datetime form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    @Html.Partial("DisplayErrorView")
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                 
                    <input value="提交" type="submit" class="btn btn-primary"/>
                </div>
            </div>
   }
    </div>

</div>

