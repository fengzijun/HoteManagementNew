@model HoteManagement.Service.Model.HotelDto
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">酒店信息</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <form class="form-horizontal">

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">酒店名称</label>
                <div class="col-sm-10">
                    @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                    <p class="form-control-static"> @Model.HotelName</p>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">是否连锁酒店</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @if (Model.IsChain == 1)
                {<text>是</text>}
    else
    {<text>否</text>}
                    </p>
                </div>
            </div>
            @if (!Model.ParentId.HasValue || Model.ParentId.Value == 0)
    {
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">子酒店</label>
            <div class="col-sm-10">
                @Html.DropDownList("hotellist", ViewBag.Hotellist as List<SelectListItem>, new { @class = "form-control" })
            </div>
        </div>
}
else
{
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">父酒店</label>
            <div class="col-sm-10">

                <p class="form-control-static"> @Model.ParentHotel.HotelName</p>
            </div>
        </div>
}

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">过期时间</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Expiretime</p>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">注册时间</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Registertime</p>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label"> <a href="/hotel/index" class="btn btn-primary" role="button">返回</a></label>
</div>
        </form>
    </div>

</div>


