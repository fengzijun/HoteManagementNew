@model HoteManagement.Service.Model.room_typeDto

@if (Model != null)
{
   
<form>
    <input type="hidden" value="@Model.Id" id="editroomtype_id" />
    <div class="form-group">
        <label for="recipient-name" class="control-label">房型名称:</label>
        <input type="text" class="form-control" id="editroomtype_name" value="@Model.room_name">
    </div>
    <div class="form-group">
        <label for="recipient-name" class="control-label">房价:</label>
        <input type="text" class="form-control" id="editroomtype_price" value="@Model.room_listedmoney">
    </div>
    <div class="form-group">
        <label for="recipient-name" class="control-label">周末挂牌价:</label>
        <input type="text" class="form-control" id="editroomtype_zmmoney" value="@Model.room_zmmoney">
    </div>
    <div class="form-group">
        <label for="recipient-name" class="control-label">是否允许钟点房:</label>
        <div class="radio">
            <label>
                @if (Model.room_hour == "允许")
                {
                    <input type="radio" checked="checked" name="optionsRadios" id="editroomtype_room_hour" value="允许"> <text>允许</text>
                }
                else
                {
                    <input type="radio" name="optionsRadios" id="editroomtype_room_hour" value="允许"> <text>允许</text>
                }



            </label>
            <label>
                @if (Model.room_hour == "允许")
                {
                    <input type="radio" name="optionsRadios" id="editroomtype_room_hour" value="不允许"> <text>不允许</text>
                }
                else
                {
                    <input type="radio" checked="checked" name="optionsRadios" id="editroomtype_room_hour" value="不允许"> <text>不允许</text>
                }
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="recipient-name" class="control-label">凌晨价:</label>
        <input type="text" class="form-control" id="editroomtype_ealryprice" value="@Model.room_ealry_price">

    </div>

    <div class="form-group">
        <label for="recipient-name" class="control-label">超预定:</label>
        <input type="text" class="form-control" id="editroomtype_bfb" value="@Model.room_Bfb">
    </div>

    <div class="form-group">
        <label for="recipient-name" class="control-label">备注:</label>
        <input type="text" class="form-control" id="editroomtype_remark" value="@Model.room_reamker">
    </div>

    <div class="form-group" id="errormsg">
    </div>
</form>
}

