@model  HoteManagement.Web.Models.Api.PageModel

@if (Model != null && Model.PageCount > 0)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="@Model.GenerateUrl(1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.PageIndex)
                {
                    <li class="active"><a href="@Model.GenerateUrl(i)">@i</a></li>
                }
                else
                {
                    <li><a href="@Model.GenerateUrl(i)">@i</a></li>
                }

            }
            
            <li>
                <a href="@Model.GenerateUrl(Model.PageCount)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>


}
