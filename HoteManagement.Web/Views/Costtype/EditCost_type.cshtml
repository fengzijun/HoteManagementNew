@model HoteManagement.Service.Model.cost_typeDto
@using HoteManagement.Service.Model;
@if (Model != null)
{

    <form>
        <input type="hidden" class="form-control" id="editcost_type_id" value="@Model.Id">
        <div class="form-group">
            <label for="recipient-name" class="control-label">费用名称:</label>
            <input type="text" class="form-control" id="editcost_type_cost_typename" value="@Model.ct_name">
        </div>
        <div class="form-group">
            <label for="recipient-name" class="control-label">编号:</label>
            <input type="text" class="form-control" id="editcost_type_number" value="@Model.ct_number">
        </div>
        <div class="form-group">
            <label for="recipient-name" class="control-label">单价:</label>
            <input type="text" class="form-control" id="editcost_type_price" value="@Model.ct_money">
        </div>

        <div class="form-group">
            <label for="recipient-name" class="control-label">类别:</label>
            <select id="editcost_type_category" class="form-control">
                @foreach (var item in ViewBag.Categorys as List<cost_typeDto>)
    {
        if (Model.ct_categories == item.Id)
        {
            <option value="@item.Id" selected="selected">@item.ct_name</option>
}
else
{
            <option value="@item.Id">@item.ct_name</option>
}

}

            </select>
        </div>
        <div class="form-group">
            <label for="recipient-name" class="control-label">备注:</label>
            <input type="text" class="form-control" id="editcost_type_remark" value="@Model.ct_remark">
        </div>

        <div class="form-group" id="errormsg">
        </div>
    </form>
}

