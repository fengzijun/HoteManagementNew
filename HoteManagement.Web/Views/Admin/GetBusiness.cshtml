@using HoteManagement.Service.Model;
@using HoteManagement;
@using HoteManagement.Web.Core;
@model  List<Org_BusinessDto>
@{
    ViewBag.Title = "GetBusiness";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">业务报送</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">

        <div class="col-lg-12">
            <div class="input-group">
                <span class="input-group-btn">
                    <a class="btn btn-primary" href="/admin/createbusiness">创建业务报送</a>
                </span>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>项目名称</th>
                        <th>建设单位</th>
                        <th>编制单位</th>
                        <th>审计单位</th>
                        <th>项目类型</th>
                        <th>状态</th>
               
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                    @if (UserInfo.OrgName != "管理员")
                    {
                    <td><a href="/admin/editbusiness?id=@item.id">@item.projectname</a> </td>
                    }
                    else
                    {
                       <td><a href="/admin/auditbusiness?id=@item.id">@item.projectname</a> </td>
                    }

                        <td>
                            @item.buildunit
                        </td>

                        <td>@item.compileunit</td>
                        <td>
                            @item.auditunit

                        </td>
                        <td>@item.projecttype</td>
                        <td>@item.GetDisplayText()</td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        @Html.Partial("PageList", ViewBag.PageInfo as HoteManagement.Web.Models.Api.PageModel)
    </div>
</div>


